#!upstart
description "Resque scheduler"
respawn

pre-start script

bash << "EOF"
  mkdir -p /var/log/resque
  chown -R deploy /var/log/resque
EOF

end script

exec su - deploy -c 'cd <%= @app_dir %>; VERBOSE=true bundle exec rake environment resque:scheduler RAILS_ENV=<%= @rails_env %> >> /var/log/resque/scheduler.log 2>&1'

start on runlevel [2345]

stop on runlevel [016]
